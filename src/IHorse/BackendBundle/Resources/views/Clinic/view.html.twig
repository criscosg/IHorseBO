{% extends "BackendBundle:Layouts:2column.html.twig" %}

{% block title_section %}
    {{ "Clinica" | trans }}
{% endblock %}

{% block breadcrumb %}
    {% set crumbs = {'Listado de clínicas': path('clinics_list')} %}
    {{ setCrumbs(crumbs) }}
    {{ parent() }}
{% endblock %}

{% block content %}

    <div class="widget-box">
        <div class="widget-title">
            <span class="icon">
                <i class="fa fa-align-justify"></i>
            </span>
            <h5>{{ "clínica"|trans }}</h5>
        </div>
        <div class="widget-content nopadding">
            <table class="table table-bordered table-striped table-hover">
                <tbody>
                    <tr>
                        <td>{{ "Nombre"|trans }}</td>
                        <td>{% if clinic.name is defined %}{{ clinic.name }}{% endif %}</td>
                    </tr>
                    <tr>
                        <td>{{ "Creación"|trans }}</td>
                        <td>{% if clinic.created is defined %}{{ clinic.created }}{% endif %}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <a title="Modificar" href="{{ path('edit_clinic', { 'id': clinic.id }) }}" class="btn btn-primary btn-s" ><i class="fa fa-pencil"></i></a>
    <a title="Borrar" href="{{ path('delete_clinic', { 'id': clinic.id }) }}" class="btn btn-danger btn-s"><i class="fa fa-trash-o"></i></a>

{% endblock %}