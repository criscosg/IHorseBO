{% extends "BackendBundle:Layouts:2column.html.twig" %}
{%  set edit = "Edición de veterinario"|trans %}
{%  set create = "Creación de veterinario"|trans %}

{% block title_section %}
    {% if edition is defined %}
        {{ edit }}
    {% else %}
        {{ create }}
    {% endif %}

{% endblock %}

{% block breadcrumb %}
    {% if edition is defined %}
        {% set crumbs = {(edit):'#'} %}
    {% else %}
        {% set crumbs = {(create):'#'} %}
    {% endif %}

    {{ setCrumbs(crumbs) }}
    {{ parent() }}
{% endblock %}

{% block content %}
    <div class="widget-box">
        <div class="widget-title">
            <span class="icon">
                <i class="fa fa-th"></i>
            </span>
            {% if edition is defined %}
                <h5>{{ edit }}</h5>
            {% else %}
                <h5>{{ "Nuevo veterinario"|trans }}</h5>
            {% endif %}
        </div>
        <div class="widget-content nopadding">
            <form class="form-horizontal" id="form-create-item" role="form"
                  action="{% if edition is defined %}{{ path('put_veterinary',{'id':id}) }} {% else %} {{ path('create_veterinary') }} {% endif %}"
                  method="post" {% if edition is defined %}{{ form_enctype(form) }} {% endif %} xmlns="http://www.w3.org/1999/html">
                
                <div class="form-group">
                    <label id="label_email" for="veterinary_email" class="col-sm-3 control-label user-active is-public"><span class="red">*</span> {{ "Email" |trans}}</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.email, { 'attr': { 'class': 'form-control'} }) }}
                    </div>
                </div>
                
                <div class="form-group">
                    <label id="label_name" for="veterinary_name" class="col-sm-3 control-label user-active is-public"><span class="red">*</span> {{ "Nombre" |trans}}</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.name, { 'attr': { 'class': 'form-control'} }) }}
                    </div>
                </div>

                <div class="form-group">
                    <label id="label_lastname" for="veterinary_lastname" class="col-sm-3 control-label user-active"><span class="red">*</span> {{ "Apellidos" |trans}}</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.last_name, { 'attr': { 'class': 'form-control'} }) }}
                    </div>
                </div>
                
                <div class="form-group">
                    <label id="label_password" for="veterinary_password" class="col-sm-3 control-label user-active"><span class="red">*</span> {{ "Contraseña" |trans}}</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.password, { 'attr': { 'class': 'form-control'} }) }}
                    </div>
                </div>

                <div class="form-group">
                    <label id="label_clinic" for="veterinary_clinic" class="col-sm-3 control-label user-active"><span class="red">*</span> {{ "Clínica" |trans}}</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.clinic, { 'attr': { 'class': 'form-control'} }) }}
                    </div>
                </div>

                {{ form_rest(form) }}
                <div class="form-group">
                    <div class="col-md-offset-2 col-sm-10">
                        <button id="register" type="submit" class="btn btn-large btn-blue">
                            {{ "Guardar cambios"|trans }}
                        </button>
                        <img style="display:none;" class="ml15 loader pull-lef" src="{{ asset('bundles/frontend/img/ajax-loader.gif') }}">
                    </div>
                    <p class="col-md-offset-2 col-sm-10 help-block">
                        <span class="red">*</span> {{"Campos obligatorios" | trans }}
                    </p>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}