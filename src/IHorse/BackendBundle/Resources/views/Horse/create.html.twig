{% extends "BackendBundle:Layouts:2column.html.twig" %}
{%  set edit = "Edición del caballo"|trans %}
{%  set create = "Creación del caballo"|trans %}

{% block title_section %}
    {% if edition is defined %}
        {{ edit }}
    {% else %}
        {{ create }}
    {% endif %}

{% endblock %}

{% block breadcrumb %}
    {% if edition is defined %}
        {% set crumbs = {(edit):'#'} %}
    {% else %}
        {% set crumbs = {create:'#'} %}
    {% endif %}

    {{ setCrumbs(crumbs) }}
    {{ parent() }}
{% endblock %}

{% block content %}
    <div class="widget-box">
        <div class="widget-title">
            <span class="icon">
                <i class="fa fa-th"></i>
            </span>
            {% if edition is defined %}
                <h5>{{ edit }}</h5>
            {% else %}
                <h5>{{ "Nuevo caballo"|trans }}</h5>
            {% endif %}
        </div>
        <div class="widget-content nopadding">
            <form class="form-horizontal" id="form-create-item" role="form"
                  action="{% if edition is defined %}{{ path('put_horse',{'id':id}) }} {% else %} {{ path('create_horse') }} {% endif %}"
                  method="post" {% if edition is defined %}{{ form_enctype(form) }} {% endif %} xmlns="http://www.w3.org/1999/html">
                
                <div class="form-group">
                    <label id="label_name" for="horse_name" class="col-sm-3 control-label horse-active is-public"><span class="red">*</span> {{ "Nombre" |trans}}</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.name, { 'attr': { 'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group">
                    <label id="label_owner" for="horse_owner" class="col-sm-3 control-label user-active"><span class="red">*</span> {{ "Dueño" |trans}}</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.owner, { 'attr': { 'class': 'form-control'} }) }}
                    </div>
                </div>

                {{ form_rest(form) }}
                <div class="form-group">
                    <div class="col-md-offset-2 col-sm-10">
                        <button id="register" type="submit" class="btn btn-large btn-blue">
                            {{ "Guardar cambios"|trans }}
                        </button>
                        <img style="display:none;" class="ml15 loader pull-lef" src="{{ asset('bundles/frontend/img/ajax-loader.gif') }}">
                    </div>
                    <p class="col-md-offset-2 col-sm-10 help-block">
                        <span class="red">*</span> {{"Campos obligatorios" | trans }}
                    </p>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}