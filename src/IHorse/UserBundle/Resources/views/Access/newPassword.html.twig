{% extends "BackendBundle:Layouts:login.html.twig" %}

{% block content %}
    <div id="loginbox">
        <div class="row">
            <div class="col-md-12">
                <div class="line-block">
                    <h1 class="title-block h3">{{ "Crear nueva contraseña" | trans }}</h3>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    {% if clave == false %}
                        <form  action="{{ path('new_password') }}" name="acceso" method="post" class="formularioBusquedaOfertas" {{ form_enctype(formPass) }}>
                            {% if error %}
                                <div class="alert alert-error">
                                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                                    <strong>{{ "Error" | trans }}:</strong> {{ "Las contraseñas deben coincidir" | trans }}
                                </div>
                            {% endif %}
                            {% set nPassword = "Contraseña" | trans %}
                            <div class="form-actions">
                                {{ form_row(formPass.password,{ 'attr': { 'class':'form-control' }}) }}
                            </div>
                            {{ form_widget(formPass.salt,{ 'attr': { 'value' : saltform } }) }}
                            {{ form_rest(formPass) }}
                            <div class="form-actions clearfix">
                                <button id="register" type="submit" class="btn btn-block btn-inverse">{{ "Cambiar" | trans }}</button>
                            </div>
                        </form>
                    {% else %}
                        <div class="alert alert-error">
                            <strong>{{ "Error" | trans }}:</strong>
                            {{ "El candidato no se encuentra en DentalHorse" | trans }}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}